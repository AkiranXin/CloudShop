/* 搜索框 */

.search{
  width: 80%;
  height: 60rpx;
  display: flex;
  margin-top: 20rpx;
  flex-direction: row;
  border: 1px solid rgb(228, 235, 241);
  border-radius: 50rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  align-items: center;
  align-self: center;
  justify-content: space-between;
  background-color: #fff;
}

/* 搜索列表 */
.list{
  width: 88%;
  margin: 10rpx auto;
}
.line_s{
  width: 100%;
    height: 4rpx;
    background-color: #d3d0d0;
    margin-bottom: 17rpx;
}
.list_1{
  width: 100%;
  height: 120rpx;
  display: flex;
  background-color: #f9f2f3;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

/* 轮播图 */
.banner{
  display: flex;
  flex-direction: row;
  align-self: center;
  margin-top: 20rpx;
  width: 100%;
  height: 400rpx;
}
.banner_1{
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}

/* 分类模块 */
.fenlei{
  width: 95%;
  height: 170rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: #fff;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.fenlei_1{
  display: flex;
  flex-direction: column;
  width: 19%;
  align-self: center;
  align-items: center;
  padding: 10rpx;
  font-size: 31rpx;
  text-align: center;
  /* justify-content: center; */
  border-radius: 33rpx;
  border: 1rpx solid #B7B7B7;
}
.fenlei_2{
  display: flex;
  flex-direction: column;
}
.line{
  width: 100%;
  height: 5rpx;
  background-color:#d3d0d0;
  margin-bottom: 30rpx;

}

